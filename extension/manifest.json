{
  "manifest_version": 3,
  "name": "TaxEase - AI Tax Filing Assistant",
  "version": "1.0.0",
  "description": "AI-powered assistant to help file taxes on Pakistan's FBR IRIS portal",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:*/*",
    "https://iris.fbr.gov.pk/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:*/*",
        "https://iris.fbr.gov.pk/*"
      ],
      "js": [
        "utils/fbrAutofillIntegration.js",
        "content/content.js"
      ],
      "css": [
        "content/content.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "utils/*.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}