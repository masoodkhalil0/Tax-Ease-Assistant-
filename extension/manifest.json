{
  "manifest_version": 3,
  "name": "TaxEase - AI Tax Filing Assistant",
  "version": "1.0.0",
  "description": "AI-powered assistant to help file taxes on Pakistan's FBR IRIS portal",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "host_permissions": [
    "http://localhost:8000/*",
    "https://iris.fbr.gov.pk/*"
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://iris.fbr.gov.pk/*"],
      "js": ["content/content.js"],
      "css": ["content/content.css"]
    }
  ]
}